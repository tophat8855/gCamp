<!DOCTYPE html>
<html>
  <head>
    <title>GCampHeatherFarley</title>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
    <%= csrf_meta_tags %>
  </head>

  <body>
    <nav class="navbar navbar-default navbar-fixed-top navbar-inverse" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <%= link_to "gCamp", root_path, :class =>"navbar-brand" %>
        </div>
        <ul class = "nav navbar-nav navbar-right">
          <% if current_user %>
          <%= link_to "#{current_user.first_name} #{current_user.last_name}", user_path(session[:user_id]), :class=>"navbar-brand" %>
          <%= link_to "Sign Out", signout_path, :class =>"navbar-brand" %>
          <% else %>
          <%= link_to "Sign Up", signup_path, :class =>"navbar-brand" %>
          <%= link_to "Sign In", signin_path, :class =>"navbar-brand" %>
          <% end %>
        </ul>
      </div>
    </nav>

    <div class= "container">
      <% flash.each do |name, msg| -%>
      <%= content_tag :div, msg, class: "alert alert-#{name} text-center" %>
      <% end -%>
    </div>

    <div class="container">
      <%= yield %>
    </div>

    <div class="container">
      <footer>
        <hr>
          <%= link_to "About", about_path %> |
          <%= link_to "Terms", terms_path %> |
          <%= link_to "FAQ", faq_path %> |
          <%= link_to "Users", users_path %> |
          <%= link_to "Projects", projects_path %> |
          <%= link_to "Tasks", tasks_path%>
      </footer>
    </div>

  </body>
</html>
