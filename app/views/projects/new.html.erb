<div class="page-header">
  <h1>Create Project</h1>
</div>

<%= form_for(@project, html: {class:"form-horizontal"}) do |f| %>
  <% if @project.errors.any? %>
    <div class="row">
      <div class="col-sm-offset-2 col-sm-5">
        <div class="alert alert-danger">
          <div id="error_explanation">
            <h4><%= pluralize(@project.errors.count, "error") %> prohibited this form from being saved:</h4>

            <ul>
              <% @project.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>



  <div class="form-group">
    <%= f.label :name, class: "col-xs-2"%>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <div class="actions col-xs-6 col-xs-offset-2">
      <%= f.submit "Create Project", class: 'btn btn-primary' %>
      <%= link_to 'cancel', projects_path, class: "btn btn-default" %>
    </div>
  </div>
<% end %>
