<%= form_for(@project, html: {class:"form-horizontal"}) do |f| %>
  <div class="form-group">
    <%= f.label :name, class: "control-label col-xs-2" %>
    <div class="col-sm-5">
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <div class="actions col-xs-6 col-xs-offset-2">
      <% if params["action"] == 'edit' %>
        <%= f.submit "Update project", class: 'btn btn-primary' %>
        <%= link_to 'cancel', project_path, class: "btn btn-default" %>
      <% else %>
        <%= f.submit "Create Project", class: 'btn btn-primary' %>
        <%= link_to 'cancel', projects_path, class: "btn btn-default" %>
      <% end %>
    </div>
  </div>
<% end %>
