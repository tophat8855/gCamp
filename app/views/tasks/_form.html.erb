<%= form_for(@task, html:{class:"form-horizontal", role:"form"}) do |f| %>
  <div class="form-group">
    <%= f.label :description, class:"col-sm-2" %>
    <div class="col-sm-5">
      <%= f.text_field :description, class:"form-control" %>
    </div>
  </div>
  
  <div class="form-group">
    <%= f.label :due_date, class:"col-sm-2" %>
    <div class="col-sm-3">
      <%= f.date_field :due_date, class:"form-control" %>
    </div>
  </div>

  <% if params["action"] == "edit" %>
    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-5">
        <%= f.check_box :complete, class:"" %>
        <%= f.label :complete %>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-6">
      <%= f.submit class:"btn btn-primary " %>
      <% if params[:action] == 'new'%>
      <%= link_to 'cancel', tasks_path, class:"btn btn-default" %>
      <% else %>
      <%= link_to 'cancel', @task, class:"btn btn-default" %>
      <% end %>
    </div>
  </div>
<% end %>
