<%= form_for(@task, html: {class:"form-horizontal", role:"form"}) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, class: "control-label col-sm-1" %>
    <div class="col-sm-5">
      <%= f.text_field :description, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :due_date, class: "col-sm-1 control-label"%>
    <div class="col-sm-5">
      <%= f.date_field :due_date, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="checkbox col-sm-1 col-sm-offset-1">
      <label>
        <% if params[:action] == 'edit'%>
          <%= f.check_box :complete %>
          <%= f.label :complete %>
        <% end %>
      </label>
    </div>
  </div>

  <div class="form-group">
    <div class="actions col-xs-6 col-xs-offset-1">
      <% if params[:action] == 'new'%>
        <%= f.submit "Create Task", class:"btn btn-primary " %>
        <%= link_to 'cancel', tasks_path, class:"btn btn-default" %>

      <% else %>
        <%= f.submit "Edit Task", class:"btn btn-primary " %>
        <%= link_to 'cancel', @task, class:"btn btn-default" %>
      <% end %>
    </div>
  </div>
<% end %>
