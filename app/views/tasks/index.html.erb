<div class="container-fluid">

  <div class="page-header">
    <h1>
      Tasks
      <div class= "pull-right h5">
        <% if params[:type] == 'incomplete'%>
          <%= link_to 'All', tasks_path(type: 'all') %> | <%= 'Incomplete' %>
        <% else %>
          <%= 'All' %> | <%= link_to 'Incomplete', tasks_path(type: 'incomplete') %>
        <% end %>
        <%= link_to 'New Task', new_task_path, class: "btn btn-info" %>
        <%= link_to 'Download CSV', tasks_path(format: :csv), class: "btn btn-info " %> <!-- glyphicon glyphicon-download-alt-->
      </div>
    </h1>
  </div>

  <table class="table">
    <thead>
      <tr>
        <th><%= link_to "Description", :sort => "description" %></th>
        <th><%= link_to "Complete", :sort => "complete" %></th>
        <th><%= link_to "Due", :sort => "due_date" %></th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @tasks.each do |task| %>
        <tr class=<%="danger" if (Date.today..(Date.today + 7)).include?(task.due_date) %> >
          <td><%= task.description %></td>
          <td><%= task.complete %></td>
          <td><%= task.due_date %></td>
          <div class= "col-md-pull-12">
            <td><%= link_to 'Show', task, class: "btn btn-success col-sm-offset-12" %></td>
            <td><%= link_to 'Edit', edit_task_path(task), class: "btn btn-info col-sm-offset-11" %></td>
            <td><%= link_to 'Delete', task, class: "btn btn-danger col-sm-offset-6", method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </div>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
