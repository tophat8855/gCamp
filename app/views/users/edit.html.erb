<div class="page-header">
  <h1>Edit User</h1>
</div>

<%= form_for(@user, html: {class:"form-horizontal"}) do |f| %>
<div class="form-group">
  <%= f.label :first_name, class: "control-label col-sm-1" %>
  <div class="col-sm-5">
    <%= f.text_field :first_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :last_name, class: "control-label col-sm-1" %>
  <div class="col-sm-5">
    <%= f.text_field :last_name, class: "form-control" %>
  </div>
</div>

<div class="form-group">
  <%= f.label :email, class: "control-label col-sm-1" %>
  <div class="col-sm-5">
    <%= f.email_field :email, class: "form-control" %>
  </div>
</div>

<div class = "form-group">
  <div class="actions col-xs-6 col-xs-offset-1">
    <%= f.submit "Update User", class: 'btn btn-primary' %>
    <%= link_to 'cancel', users_path, class: "btn btn-default" %>
  </div>
</div>
<% end %>
