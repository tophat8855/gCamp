<%= form_for(@user, html: {class:"form-horizontal"}) do |f| %>
<% if @user.errors.any? %>
  <div class="row">
    <div class="col-sm-offset-2 col-sm-5">
      <div class="alert alert-danger">
        <div id="error_explanation">
          <h4><%= pluralize(@user.errors.count, "error") %> prohibited this form from being saved:</h4>

          <ul>
            <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
  <% end %>

  <div class="form-group">
    <%= f.label :first_name, class: "control-label col-xs-2" %>
    <div class="col-sm-5">
      <%= f.text_field :first_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :last_name, class: "control-label col-xs-2" %>
    <div class="col-sm-5">
      <%= f.text_field :last_name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <%= f.label :email, class: "control-label col-xs-2" %>
    <div class="col-sm-5">
      <%= f.email_field :email, class: "form-control" %>
    </div>
  </div>

  <div class = "form-group">
    <div class="actions col-xs-6 col-xs-offset-2">
      <% if params["action"] == 'edit' %>
        <%= f.submit "Update User", class: 'btn btn-primary' %>
      <% else %>
        <%= f.submit "Create User", class: 'btn btn-primary' %>
      <% end %>
      <%= link_to 'cancel', users_path, class: "btn btn-default" %>
    </div>
  </div>

  <% if params["action"] == "edit" %>
    <div class = "col-xs-offset-2 col-xs-5">
      <div class = "form-group well">
        <div class="actions text-center">
          <%= link_to 'Delete User', user_path(@user), method: :delete, class: "btn btn-danger" %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
