<div class= "page-header">
  <h1>
    Users
    <div class = "pull-right">
      <%= link_to "New User", new_user_path, class: "btn btn-info" %>
    </div>
  </h1>
</div>

<table class = "table">
  <thead>
    <tr>
      <th>
        Name
      </th>
      <th>
        Email
      </th>
      <th>
      </th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
    <tr>
      <td class="col-sm-5">
        <%= link_to "#{user.first_name} #{user.last_name}", user_path(user) %>
      </td>
      <td class="col-sm-7">
        <%= mail_to user.email %>
      </td>
      <td>
        <%= link_to 'Edit', edit_user_path(user) %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
