<div class="container">
  <div class="jumbotron">
    <h1>gCamp</h1>
    <p>Your life, organized.</p>
  </div>
</div>


<div class="container">
  <div class="row">
    <div class="col-md-4"><%= image_tag "bike_staples.jpg", :size => "290x200" %>
    </div>
    <div class="col-md-4"><%= image_tag "commute_bike.jpg", :size => "290x200" %>
    </div>
    <div class="col-md-4"><%= image_tag "girls_biking.jpg", :size => "290x200" %>
    </div>
  </div>
</div>

<br>

<div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Tasks</h3>
        </div>
        <div class="panel-body">
          Grouped by projects and lists. Just the way you like 'em
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Documents</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Upload</li>
            <li>Comment</li>
            <li>Revise</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="col-md-4">
      <div class="panel panel-info">
        <div class="panel-heading">
          <h3 class="panel-title">Comments</h3>
        </div>
        <div class="panel-body">
          <ul>
            <li>Comment on tasks and documents</li>
            <li>Get email notifications</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<br>

<div class="container lead">
  <% @quotes.each do |saying| %>
    <strong><%= saying.quote %></strong>
    <br>
    <em><%= saying.quoter %></em>
    <br><br>
  <% end %>
</div>
